/dts-v1/;

/include/ "nspire.dtsi"

/ {
	model = "TI-NSPIRE CX";
	compatible = "arm,nspire-cx";

	memory {
		device_type = "memory";
		reg = <0x10000000 0x4000000>; /* 64 MB */
	};

	ahb {
		#address-cells = <1>;
		#size-cells = <1>;

		vic: interrupt-controller@DC000000 {
			compatible = "arm,pl190-vic";
			interrupt-controller;
			reg = <0xDC000000 0x1000>;
			#interrupt-cells = <1>;
		};

		apb {
			#address-cells = <1>;
			#size-cells = <1>;

			i2c: i2c@90050000 {
				compatible = "snps,designware-i2c";
				#address-cells = <1>;
				#size-cells = <0>;
				reg = <0x90050000 0x1000>;
				interrupts = <20>;

				touchpad: input@20 {
					reg = <0x20>;
				};
			};

			fast_timer: timer@90010000 {
				compatible = "arm,sp804", "arm,primecell";
				reg = <0x90010000 0x1000>;
				interrupts = <17>;
			};

			uart0: serial@90020000 {
				compatible = "arm,pl011", "arm,primecell";
				reg = <0x90020000 0x1000>;
				interrupts = <1>;
			};

			uart1: serial@90030000 {
				compatible = "arm,pl011", "arm,primecell";
				reg = <0x90030000 0x1000>;
			};

			timer0: pwr@900C0000 {
				compatible = "arm,sp804", "arm,primecell";
				reg = <0x900C0000 0x1000>;
				interrupts = <18>;
			};

			timer1: pwr@900D0000 {
				compatible = "arm,sp804", "arm,primecell";
				reg = <0x900D0000 0x1000>;
				interrupts = <19>;
			};
		};
	};
	chosen {
		bootargs = "debug earlyprintk keep_bootcon console=ttyAMA0";
	};
};
